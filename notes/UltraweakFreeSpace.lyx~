\begin_body

\begin_layout Standard
Auxiliar problem
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\begin{cases}
\Delta u_{f}+k^{2}u_{f}=0 & \text{in }\mathbb{R}^{2}\setminus\overline{\mathrm{B}_{R}}\\
\nabla u_{f}\cdot\mathbf{n}=f & \text{on }\partial\mathrm{B}_{R}\\
\frac{\partial u_{f}}{\partial r}-iku_{f}=o\left(\frac{1}{r}\right) & \text{on }r\to\infty,\,\text{uniformly on }\theta
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Standard
Neumann to Dirichled operator:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\mathcal{N}:L^{2}\left(\partial\mathrm{B}_{R}\right)\to L^{2}\left(\partial\mathrm{B}_{R}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
u_{f}=\sum_{n=-\infty}^{\infty}\frac{1}{\sqrt{2\pi}}\frac{2}{k}\frac{a_{n}}{H_{n-1}^{(1)}\left(kR\right)-H_{n+1}^{(1)}\left(kR\right)}H_{n}^{(1)}\left(kr\right)e^{in\theta}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\nabla u_{f}\cdot\mathbf{n}=\sum_{n=-\infty}^{\infty}\frac{1}{\sqrt{2\pi}}\frac{2}{k}\frac{a_{n}}{H_{n-1}^{(1)}\left(kR\right)-H_{n+1}^{(1)}\left(kR\right)}\frac{\partial H_{n}^{(1)}\left(kr\right)}{\partial r}e^{in\theta}
\]

\end_inset


\end_layout

\begin_layout Standard
but
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{dH_{\alpha}^{(1)}\left(x\right)}{dx}=\frac{H_{\alpha-1}^{(1)}\left(x\right)-H_{\alpha+1}^{(1)}\left(x\right)}{2}
\]

\end_inset

so
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\nabla u_{f}\cdot\mathbf{n}=\sum_{n=-\infty}^{\infty}\frac{1}{\sqrt{2\pi}}a_{n}\frac{H_{n-1}^{(1)}\left(kr\right)-H_{n+1}^{(1)}\left(kr\right)}{H_{n-1}^{(1)}\left(kR\right)-H_{n+1}^{(1)}\left(kR\right)}e^{in\theta}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left.\nabla u_{f}\cdot\mathbf{n}\right|_{r=R}=\sum_{n=-\infty}^{\infty}\frac{1}{\sqrt{2\pi}}a_{n}e^{in\theta}
\]

\end_inset


\end_layout

\begin_layout Standard
so
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left.\nabla u_{f}\cdot\mathbf{n}\right|_{r=R}=f
\]

\end_inset

 implies that 
\begin_inset Formula $a_{n}$
\end_inset

 are the coefficients of the Fourier expansion of 
\begin_inset Formula $f\left(\theta\right)$
\end_inset

 and the Neuman to Dirichlet map can be evaluated as:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\mathcal{N}\left(f\right)=\left.u_{f}\right\vert_{r=R}=\sum_{n=-\infty}^{\infty}\frac{1}{\sqrt{2\pi}}\frac{2}{k}\frac{a_{n}}{H_{n-1}^{(1)}\left(kR\right)-H_{n+1}^{(1)}\left(kR\right)}H_{n}^{(1)}\left(kR\right)e^{in\theta}
\]

\end_inset


\begin_inset Formula 
\[
=\sum_{n=-\infty}^{\infty}\frac{2}{k}\frac{H_{n}^{(1)}\left(kR\right)}{H_{n-1}^{(1)}\left(kR\right)-H_{n+1}^{(1)}\left(kR\right)}a_{n}\frac{e^{in\theta}}{\sqrt{2\pi}}
\]

\end_inset

where 
\begin_inset Formula $a_{n}$
\end_inset

 are the coefficients of the Fourier expansion of 
\begin_inset Formula $f\left(\theta\right)$
\end_inset

 (it was nicer on the waveguide)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
a_{n}=
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\mathcal{N}\left(f\right)=\sum_{n=-\infty}^{\infty}\frac{1}{\pi k}\frac{H_{n}^{(1)}\left(kR\right)}{H_{n-1}^{(1)}\left(kR\right)-H_{n+1}^{(1)}\left(kR\right)}\left(\int_{0}^{2\pi}f\left(\beta\right)e^{-in\beta}d\beta\right)e^{in\theta}
\]

\end_inset


\end_layout

\begin_layout Standard
Fluxes:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
-\int_{\Sigma}\left(\mathcal{N}_{k,\Sigma}\left(\nabla_{h}w\cdot\mathbf{n}\right)\nabla_{h}\overline{v}\cdot\mathbf{n}-\nabla_{h}w\cdot\mathbf{n}\overline{v}-dik\left(\mathcal{N}_{k,\Sigma}\left(\nabla_{h}w\cdot\mathbf{n}\right)-w\right)\overline{\left(\mathcal{N}_{k,\Sigma}\left(\nabla_{h}v\cdot\mathbf{n}\right)-v\right)}\right)\,dS
\]

\end_inset


\end_layout

\begin_layout Standard
vamos a probar primero con los términos fáciles XD, los que no tienen 
\begin_inset Formula $d$
\end_inset

, por ejemplo
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int_{\Sigma}\mathcal{N}_{k,\Sigma}\left(\nabla_{h}w_{n}\cdot\mathbf{n}\right)\nabla_{h}\overline{v}_{m}\cdot\mathbf{n}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $w_{n}=e^{ik\mathbf{d}_{n}\cdot\mathbf{x}}$
\end_inset

, 
\begin_inset Formula $v_{m}=e^{ik\mathbf{d}_{m}\cdot\mathbf{x}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
k^{2}\mathbf{d}_{m}\cdot\mathbf{n}\mathbf{d}_{n}\cdot\mathbf{n}\int_{\Sigma}\mathcal{N}_{k,\Sigma}\left(e^{ik\mathbf{d}_{n}\cdot\mathbf{x}}\right)e^{-ik\mathbf{d}_{m}\cdot\mathbf{x}}=
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
k^{2}\mathbf{d}_{m}\cdot\mathbf{n}\mathbf{d}_{n}\cdot\mathbf{n}\int_{\Sigma}\sum_{n=-\infty}^{\infty}\left(\frac{1}{\pi k}\frac{H_{n}^{(1)}\left(kR\right)}{H_{n-1}^{(1)}\left(kR\right)-H_{n+1}^{(1)}\left(kR\right)}\left(\int_{0}^{2\pi}f\left(\beta\right)e^{-in\beta}d\beta\right)e^{in\theta}\right)e^{-ik\mathbf{d}_{m}\cdot\mathbf{x}}\,dS_{x}=
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
k\frac{1}{\pi}\frac{H_{n}^{(1)}\left(kR\right)}{H_{n-1}^{(1)}\left(kR\right)-H_{n+1}^{(1)}\left(kR\right)}\mathbf{d}_{m}\cdot\mathbf{n}\mathbf{d}_{n}\cdot\mathbf{n}\int_{\Sigma}\sum_{n=-\infty}^{\infty}\left(\int_{0}^{2\pi}f\left(\beta\right)e^{-in\beta}d\beta\right)e^{in\theta}e^{-ik\mathbf{d}_{m}\cdot\mathbf{x}}\,dS_{x}=
\]

\end_inset


